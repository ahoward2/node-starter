{
  "compilerOptions": {
    "module": "es6",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist/client",
    "lib": ["es7", "dom"]
  },
  "include": ["src/client", "src/shared"],
  "exclude": ["src/server", "node_modules", "**/*.spec.ts"]
}
